  		 WHERE board_type='1'
  	</select>
  	
  	
<!--   	한개의 게시글 조회 -->
  	<select id="counseller_selectByBidx" parameterType="int" resultType="cboardVO">
  		SELECT title
  			  ,id
  			  ,wdate
  			  ,content
  		 FROM boardtable
  		WHERE bidx=#{bidx}
  	</select>
  
